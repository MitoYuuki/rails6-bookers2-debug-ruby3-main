<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorite_path(@book), method: :delete, remote: true do %>
                ♥<%= @book.favorites.count %>
              <% end %>
            </td>
            <% else %>
              <td>
                <%= link_to book_favorite_path(@book), method: :post, remote: true do %>
                  ♡<%= @book.favorites.count %>
                <% end %>
              </td>
          <% end %>
          <td>コメント数：<%= @book.book_comments.count %></td>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
          <td>
            <%= link_to 'Destroy', book_path(@book), method: :delete, remote: true,
              data: { confirm: '本当に消しますか？' },
              class: "btn btn-sm btn-danger" %>
            </td>
        </tr>
      </table>
      <% @book.book_comments.each do |book_comment| %>
       <div class="book-comment mb-2" id="book-comment-<%= book_comment.id %>">
        <%= image_tag book_comment.user.get_profile_image(100,100), class: "rounded-circle" %>
        <strong><%= book_comment.user.name %></strong>
        <small><%= book_comment.created_at.strftime('%Y/%m/%d') %></small>
  
        <% if book_comment.user == current_user %>
          <%= link_to '削除', book_book_comment_path(book_comment.book, book_comment), 
                method: :delete, 
                remote: true, 
                data: { confirm: '本当に削除しますか？' }, 
                class: "btn btn-sm btn-danger ms-2" %>
        <% end %>

        <p><%= book_comment.comment %></p>
      </div>
    <% end %>


        <div>
          <%= form_with model: [@book, @book_comment], remote: true do |f| %>
            <%= f.text_area :comment, rows: 5, placeholder: "コメントをここに", class: "form-control" %><br>
            <%= f.submit "送信する", class: "btn btn-primary" %>
          <% end %>
        </div>

    </div>
      
  </div>
</div>