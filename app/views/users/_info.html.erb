<!-- app/views/users/_info.html.erb -->

<table class="table">
  <tr>
    <td>
      <%= image_tag user.get_profile_image, size: "100x100", class: "rounded-circle" %>
    </td>
  </tr>
  <tr>
    <th>Name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>Introduction</th>
    <td><%= user.introduction.presence || "未登録" %></td>
  </tr>
  <tr>
    <th>Follows</th>
    <td>
      <%= link_to user.followings.count, followings_user_path(user), class: "btn btn-link p-0" %>
    </td>
  </tr>
  <tr>
    <th>Followers</th>
    <td>
      <%= link_to user.followers.count, followers_user_path(user), class: "btn btn-link p-0" %>
    </td>
  </tr>
</table>